{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Progetti Personali",
    "version": "0.1.0",
    "identifier": "com.progetti-personali.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5174",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": [
            "deb",
            "appimage",
            "msi",
            "app",
            "dmg"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "publisher": "Progetti Personali",
        "category": "Game",
        "shortDescription": "A tactical combat game",
        "longDescription": "An advanced tactical combat game with grid-based battles, spell crafting, and character customization."
    },
    "app": {
        "windows": [
            {
                "title": "Progetti Personali",
                "width": 1280,
                "height": 720,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    }
}